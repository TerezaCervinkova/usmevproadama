---
import { getCollection, render } from 'astro:content'
import PostPage from '../../../components/ui/PostPage.astro'

export async function getStaticPaths() {
  const guidePosts = await getCollection('guidePosts')

  return guidePosts.map((post) => ({
    params: { id: post.data.slug },
    props: { post },
  }))
}

const { post } = Astro.props
const { Content: RenderedContent } = await render(post)
---

<PostPage title={post.data.title}>
  <RenderedContent />
</PostPage>

